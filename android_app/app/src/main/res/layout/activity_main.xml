<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0D2818"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ„ MushroomTech Control"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- Status Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/statusCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="#1B5E20"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <TextView
                android:id="@+id/systemStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="ðŸ”„ System Status: Loading..."
                android:textColor="#FFFFFF"
                android:textSize="14sp" />

        </androidx.cardview.widget.CardView>

        <!-- Meters Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp">

            <!-- Temperature Meter -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <com.mushroomtech.app.CircularMeterView
                    android:id="@+id/temperatureMeter"
                    android:layout_width="100dp"
                    android:layout_height="100dp" />

                <TextView
                    android:id="@+id/temperatureValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--Â°C"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Temperature"
                    android:textColor="#CCCCCC"
                    android:textSize="12sp" />

            </LinearLayout>

            <!-- Humidity Meter -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <com.mushroomtech.app.CircularMeterView
                    android:id="@+id/humidityMeter"
                    android:layout_width="100dp"
                    android:layout_height="100dp" />

                <TextView
                    android:id="@+id/humidityValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--%"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Humidity"
                    android:textColor="#CCCCCC"
                    android:textSize="12sp" />

            </LinearLayout>

            <!-- CO2 Meter -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <com.mushroomtech.app.CircularMeterView
                    android:id="@+id/co2Meter"
                    android:layout_width="100dp"
                    android:layout_height="100dp" />

                <TextView
                    android:id="@+id/co2Value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-- ppm"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CO2"
                    android:textColor="#CCCCCC"
                    android:textSize="12sp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Control Buttons -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Manual Controls"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/waterPumpButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸš° Water Pump: OFF"
            android:textColor="#FFFFFF"
            android:backgroundTint="#1B5E20"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/fanButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ’¨ Fan: OFF"
            android:textColor="#FFFFFF"
            android:backgroundTint="#1B5E20"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/lightButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ’¡ Light: OFF"
            android:textColor="#FFFFFF"
            android:backgroundTint="#1B5E20"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/dataAnalysisButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ“Š Data Analysis"
            android:textColor="#FFFFFF"
            android:backgroundTint="#2E7D32"
            android:layout_marginBottom="16dp" />

    </LinearLayout>

    <!-- Floating Action Button -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/aiChatFab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:src="@android:drawable/ic_input_add"
        app:backgroundTint="#4CAF50"
        app:tint="#FFFFFF" />

</ScrollView> 